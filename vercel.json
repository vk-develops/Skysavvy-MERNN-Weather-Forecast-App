{
    "version": 2,
    "builds": [
        {
            "src": "*.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/Backend/index.js"
        },
        {
            "source": "/api/v1/(.*)",
            "destination": "/Backend/Api/"
        },
        {
            "source": "/Public/(.*)",
            "destination": "/Backend/Public/"
        }
    ]
}
